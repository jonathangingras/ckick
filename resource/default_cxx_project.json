{
    "name": "new_cxx_project",
    "cmake_min_version": "3.0",

    "root": ".",

    "build_dir": "build",

    "compiler_settings": {
        "cxxflags": ["-std=c++11", "-O3"]
    },

    "plugins": [
        {
            "name": "ClangComplete"
        },
        {
            "name": "GTest"
        }
    ],

    "subdirs": [
        {
            "name": "include",
            "has_cmake": false
        },
        {
            "name": "src",
            "executables": [
                {
                    "name": "main",
                    "source": "main.cc"
                }
            ]
        },
        {
            "name": "test",
            "executables": [
                {
                    "name": "main_test",
                    "source": "main_test.cc",
                    "libs": [
                        "${GTEST_LIBRARIES}"
                    ],
                    "dependencies": [
                        "${GTEST_TARGET}"
                    ],
                    "is_test": true
                }
            ]
        }
    ]
}
